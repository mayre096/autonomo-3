import random  # Este cÃ³digo elige aleatoriamente una opciÃ³n para la mÃ¡quina en el juego

# Opciones vÃ¡lidas
opciones = ("piedra", "papel", "tijera")  # ahora es una tupla

# Diccionario
puntos = {"jugador 1": 0, "jugador 2": 0, "maquina": 0}

# Dibujos
dibujos = {"piedra": "âœŠ", "papel": "ðŸ–", "tijera": "âœŒï¸"}

# Lista
Historial_de_jugadas = []

def mostrar_dibujos(eleccion):
    if eleccion == "piedra":
        print("âœŠ")
    elif eleccion == "papel":
        print("ðŸ–")
    elif eleccion == "tijera":
        print("âœŒï¸")

def mostrar_puntos():
    print("\nHistorial actual:")
    print(puntos)
    print("historial de partidas:")
    for jugadas in historial_de_jugadas:
        print(jugadas)

while True:  # Bucle para volver a jugar
    # 1. Mostrar menÃº
    print("\nHola, bienvenido")
    print("Seleccione una opciÃ³n de juego")
    print("1 jugador")
    print("2 jugadores")

    modo = input("Ingrese su opciÃ³n de juego: ").lower()

    # 2. LÃ³gica segÃºn modo de juego
    if modo == "1 jugador":
        print("Jugar contra la mÃ¡quina")
        jugador1 = input("Jugador elige piedra, papel o tijera: ").lower()
        if jugador1 not in opciones:
            print("Error, elecciÃ³n invÃ¡lida")
            continue
        jugador2 = random.choice(opciones)
        print(f"Jugador 2 (mÃ¡quina) eligiÃ³: {jugador2}")
        mostrar_dibujos(jugador2)

    elif modo == "2 jugadores":
        print("Jugar online con amigos")
        jugador1 = input("Jugador 1 elige piedra, papel o tijera: ").lower()
        jugador2 = input("Jugador 2 elige piedra, papel o tijera: ").lower()
        if jugador1 not in opciones or jugador2 not in opciones:
            print("Error, elecciÃ³n invÃ¡lida")
            continue
    else:
        print("Error, volver a ingresar al juego")
        continue

    # 3. Determinar ganador
    if jugador1 == jugador2:
        print("Empate")
        historial_de_jugadas.append("empate")
    elif (jugador1 == "piedra" and jugador2 == "tijera") or \
         (jugador1 == "tijera" and jugador2 == "papel") or \
         (jugador1 == "papel" and jugador2 == "piedra"):
        print("Gana -> Jugador 1")
        puntos["jugador 1"] += 1
        historial_de_jugadas.append("jugador 1")
    else:
        print("Gana -> Jugador 2")
        if modo == "1 jugador":
            puntos["maquina"] += 1
        else:
            puntos["jugador 2"] += 1
        historial_de_jugadas.append("jugador 2")

    mostrar_puntos()

    # 4. Fin del juego
    jugar_ahora = input("Â¿Nueva partida? (si/no): ").lower()
    if jugar_ahora == "si":
        print("Iniciando un nuevo juego...")
        continue  # Volver a iniciar el juego
    elif jugar_ahora == "no":
        print("Hasta luego, vuelve pronto")
        break  # Salir del juego
    else:
        print("OpciÃ³n no reconocida, saliendo del juego")
        break
